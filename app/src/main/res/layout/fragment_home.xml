<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragmentoHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/feedback1"
            android:layout_width="345dp"
            android:layout_height="260dp"
            app:srcCompat="@drawable/vector_feedback"
            android:elevation="10dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/rectangle"
            style="@style/rectangledetails"
            android:layout_width="370dp"
            android:layout_height="85dp"
            android:paddingTop="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/adventure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/adventure"
            android:textAlignment="center"
            android:textColor="@color/off_white"
            android:textSize="23sp"
            app:layout_constraintBottom_toBottomOf="@id/rectangle"
            app:layout_constraintEnd_toEndOf="@id/rectangle"
            app:layout_constraintStart_toStartOf="@id/rectangle"
            app:layout_constraintTop_toTopOf="@id/rectangle"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/Tarefas"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/Tasks"
            android:textColor="@color/black"
            android:textSize="26sp"
            app:layout_constraintStart_toStartOf="@id/rectangle"
            app:layout_constraintTop_toBottomOf="@id/rectangle"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ButtonCalendar"
            style="@style/buttonCalendar"
            android:layout_width="140dp"
            android:layout_height="48dp"
            android:layout_marginTop="25dp"
            android:drawableStart="@drawable/baseline_calendar_month_24"
            android:fontFamily="@font/poppins_medium"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:paddingEnd="7dp"
            android:text="@string/calendar"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/rectangle"
            app:layout_constraintTop_toBottomOf="@id/rectangle"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/BarDays"
            style="@style/CalendarDays"
            android:layout_width="370dp"
            android:layout_height="61dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Tarefas"/>

        <HorizontalScrollView
            android:id="@+id/BarDaysScroll"
            android:layout_width="@id/BarDays"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="@id/BarDays"
            app:layout_constraintStart_toStartOf="@id/BarDays"
            app:layout_constraintTop_toBottomOf="@id/Tarefas">

            <LinearLayout
                android:id="@+id/linearLayoutDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- Dias serÃ£o adicionados dinamicamente -->
            </LinearLayout>
        </HorizontalScrollView>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/elipse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/off_white"
            android:textSize="23sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/Tarefas"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/BarDays"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ToDoList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/ToDo"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/BarDays"
            app:layout_constraintTop_toBottomOf="@id/BarDays"/>

        <LinearLayout
            android:id="@+id/TaskContainer"
            android:layout_width="0dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ToDoList"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/InputTask"
            style="@style/AddTask"
            android:layout_width="370dp"
            android:layout_height="56dp"
            android:drawableStart="@drawable/baseline_add_24"
            android:fontFamily="@font/poppins_medium"
            android:paddingStart="20dp"
            android:paddingEnd="90dp"
            android:text="@string/AddTarefa"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/TaskContainer"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sendProgress"
            style="@style/sendProgress"
            android:layout_width="180dp"
            android:layout_height="42dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/poppins_medium"
            android:paddingTop="4dp"
            android:text="@string/sendProgress"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@id/BarDays"
            app:layout_constraintEnd_toEndOf="@id/BarDays" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/buttonProgress"
            android:layout_width="375dp"
            android:layout_height="160dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="100dp"
            android:foregroundGravity="center_horizontal"
            android:background="@drawable/rectangleprogress"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="@id/InputTask"
            app:layout_constraintStart_toStartOf="@id/InputTask"
            app:layout_constraintTop_toBottomOf="@id/InputTask">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/textProgresso"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="start"
                android:paddingStart="30dp"
                android:paddingEnd="20dp"
                android:text="@string/progresso"
                android:textAlignment="textStart"
                android:textColor="@color/off_white"
                android:textSize="32sp"
                app:layout_constraintStart_toStartOf="@id/buttonProgress"
                app:layout_constraintTop_toTopOf="@id/buttonProgress"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textProgressoWarning"
                android:layout_width="190dp"
                android:layout_height="70dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/poppins"
                android:text="@string/ProgressoWarning"
                android:textColor="@color/off_white"
                android:visibility="gone"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/buttonProgress"
                app:layout_constraintTop_toTopOf="@id/buttonProgress"/>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:max="100"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toBottomOf="@id/textProgresso"
                app:layout_constraintStart_toStartOf="@id/textProgresso"
                app:layout_constraintEnd_toEndOf="@id/textProgresso"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/giftbox1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/gift"
                android:elevation="10dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintStart_toEndOf="@id/progressBar"
                app:layout_constraintTop_toTopOf="@id/progressBar"
                app:layout_constraintBottom_toBottomOf="@id/progressBar"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/giftbox2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/gift"
                android:elevation="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="27dp"
                app:layout_constraintStart_toStartOf="@id/progressBar"
                app:layout_constraintEnd_toEndOf="@id/progressBar"
                app:layout_constraintTop_toTopOf="@id/progressBar"
                app:layout_constraintBottom_toBottomOf="@id/progressBar"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/HappyMonster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/happy"
                app:layout_constraintBottom_toBottomOf="@id/buttonProgress"
                app:layout_constraintEnd_toEndOf="@id/buttonProgress"
                app:layout_constraintTop_toTopOf="@id/buttonProgress" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
